<%= simple_form_for @book, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :isbn %>
  <%= error_span(@book[:isbn]) %>
  <%= f.input :title %>
  <%= error_span(@book[:title]) %>
  <%= f.input :price %>
  <%= error_span(@book[:price]) %>
  <%= f.input :publish %>
  <%= error_span(@book[:publish]) %>
  <%= f.input :published %>
  <%= error_span(@book[:published]) %>
  <%= f.input :cd %>
  <%= error_span(@book[:cd]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                books_path, :class => 'btn btn-default' %>
<% end %>
